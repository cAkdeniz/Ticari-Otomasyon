@model List<OnlineTicariOtomasyon.Models.Entity.Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int i = 0;
}

<div class="card mt-3">
    <div class="col-12 mt-3">
        <div class="row">
            <a href="/Kategori/Ekle" style="margin-bottom:7px;margin-left:20px" class="btn btn-primary">Yeni Kategori Ekle</a>
            <h3 style="margin-left:480px;color:green;font-size:33px">Kategori Listesi</h3>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>NO</th>
                        <th>KATEGORİ ADI</th>
                        <th>DÜZENLE</th>
                        <th>SİL</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.Ad</td>
                            <td>
                                <a href="/Kategori/Guncelle/@item.Id" class="btn btn-warning">Düzenle</a>
                            </td>
                            <td>
                                <a href="/Kategori/Sil/@item.Id" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

