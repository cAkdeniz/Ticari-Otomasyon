@model OnlineTicariOtomasyon.Models.Entity.Musteri

@using (Html.BeginForm("Guncelle", "MusteriPanel", FormMethod.Post))
{
    <div class="form-group row">
        @Html.HiddenFor(x=>x.Id)
        <label for="inputName" class="col-sm-2 col-form-label">Ad</label>
        <div class="col-sm-10">
            <input type="text" name="Ad" class="form-control" id="inputName" value="@Model.Ad">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>
        <div class="col-sm-10">
            <input type="text" name="Soyad" class="form-control" id="inputEmail" value="@Model.Soyad">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName2" class="col-sm-2 col-form-label">E-Mail</label>
        <div class="col-sm-10">
            <input type="email" name="Mail" class="form-control" id="inputName2" value="@Model.Mail">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputExperience" class="col-sm-2 col-form-label">Şehir</label>
        <div class="col-sm-10">
            <input class="form-control" name="Sehir" id="inputExperience" value="@Model.Sehir">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
        <div class="col-sm-10">
            <input type="text" name="Sifre" class="form-control" id="inputSkills" value="@Model.Sifre">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-danger">Güncelle</button>
        </div>
    </div>
}

