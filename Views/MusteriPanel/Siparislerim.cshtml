@model List<OnlineTicariOtomasyon.Models.Entity.SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}
<br />
<div class="row">
    <h3 style="margin-left:100px;color:red;font-size:24px">Siparişlerim</h3>
</div>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Ürün Ad</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Urun.Ad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat</td>
                <td>@item.Tarih.ToString("D")</td>
            </tr>
        }
    </tbody>
</table>

