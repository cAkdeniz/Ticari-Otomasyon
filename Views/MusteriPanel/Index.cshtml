@model OnlineTicariOtomasyon.Models.Entity.Musteri
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Profilim</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle" src="~/Templates/AdminLTE-3.0.4/dist/img/user4-128x128.jpg" alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">@Model.Ad @Model.Soyad</h3>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Toplam Alış</b> <a class="float-right">@ViewBag.ToplamAlis</a>
                            </li>
                            <li class="list-group-item">
                                <b>Toplam Alış Tutarı</b> <a class="float-right">@ViewBag.ToplamAlisTutar</a>
                            </li>
                            <li class="list-group-item">
                                <b>Toplam Ürün Sayısı</b> <a class="float-right">@ViewBag.ToplamUrun</a>
                            </li>
                        </ul>

                        <a href="/MusteriPanel/Kargolarim" class="btn btn-primary btn-block"><b>Kargo Takip</b></a>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hakkımda</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-at"></i>&nbsp; E-Mail</strong>

                        <p class="text-muted">
                            @Model.Mail
                        </p>

                        <hr>

                        <strong><i class="fas fa-map-marker-alt mr-1"></i>&nbsp; Şehir</strong>

                        <p class="text-muted">@Model.Sehir</p>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#timeline" data-toggle="tab">Duyurular</a></li>
                            <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Bilgilerimi Güncelle</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <!-- /.tab-pane -->
                            <div class="tab-pane active" id="timeline">
                                <!-- The timeline -->
                                @Html.Action("_Duyuru", "MusteriPanel")
                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="settings">
                                @Html.Action("_ProfilGuncelle","MusteriPanel")
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

<script src="~/Templates/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
<script src="~/Templates/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Templates/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
<script src="~/Templates/AdminLTE-3.0.4/dist/js/demo.js"></script>
