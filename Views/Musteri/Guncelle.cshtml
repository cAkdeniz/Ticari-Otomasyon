@model OnlineTicariOtomasyon.Models.Entity.Musteri
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3 class="mt-4" style="margin-left:670px;color:purple;font-size:33px">Müşteri Kaydı Düzenle</h3>

<form method="post" action="Guncelle">


    <div style="margin-top:25px"></div>
    <div style="margin-top:15px">
        <input type="hidden" name="Id" value="@Model.Id" />
        <label>Müşteri Adı: </label>
        <input type="text" name="Ad" value="@Model.Ad" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <label>Müşteri Soyadı: </label>
        <input type="text" name="Soyad" value="@Model.Soyad" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <label>Şehir: </label>
        <input type="text" name="Sehir" value="@Model.Sehir" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <label>E-mail Adresi: </label>
        <input type="email" name="Mail" value="@Model.Mail" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Kaydet</button>
    </div>

</form>

