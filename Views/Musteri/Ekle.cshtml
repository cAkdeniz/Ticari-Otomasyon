@model OnlineTicariOtomasyon.Models.Entity.Musteri
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3 class="mt-4" style="margin-left:670px;color:purple;font-size:33px">Müşteri Kaydı</h3>

<form method="post" action="Ekle">


    <div style="margin-top:25px"></div>
    <div style="margin-top:15px">
        <label>Müşteri Adı: </label>
        <input type="text" name="Ad" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <label>Müşteri Soyadı: </label>
        <input type="text" name="Soyad" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <label>Şehir: </label>
        <input type="text" name="Sehir" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <label>E-mail Adresi: </label>
        <input type="email" name="Mail" required class="form-control" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Kaydet</button>
    </div>

</form>
